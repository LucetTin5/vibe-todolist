{
  "name": "@todolist/root",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "dev": "bun run --filter='*' dev",
    "build": "bun run --filter='*' build",
    "start": "bun run backend start",
    "test": "bun run --filter='*' test",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "lint:fix-unsafe": "biome lint --write --unsafe .",
    "check": "biome check .",
    "type-check": "bun run --filter='*' type-check",
    "pre-commit": "bun run type-check && bun run lint && bun run test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": ["biome format --write"],
    "*.{js,jsx,ts,tsx}": ["biome lint --write --diagnostic-level=error"]
  }
}
